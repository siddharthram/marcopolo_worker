
<div class="row">
	<div class="control-group">
		<div class="controls">
	<%- if controller_name != 'sessions' %>
	<%= button_to "Sign In", new_session_path(resource_name),class: :mybtn, :method => "get"%>

	<% end -%>



	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>

	<%= button_to "Sign Up", new_registration_path(resource_name),class: :mybtn, :method => "get" %>

	<% end -%>



	<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>

	<%= button_to "Forgot Password?", new_password_path(resource_name),class: :mybtn, :method => "get" %>


	<% end -%>


	<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
	<%= button_to "email confirmation", new_confirmation_path(resource_name),class: :mybtn, :method => "get" %>

	<% end -%>


	<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>

<%= button_to "Unlock Instructions", new_unlock_path(resource_name),class: :mybtn, :method => "get" %>

	<% end -%>


	<%- if devise_mapping.omniauthable? %>
	<%- resource_class.omniauth_providers.each do |provider| %>
	<%= button_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider),class: :mybtn, :method => "get" %>
	<% end -%>
	<% end -%>
</div>
</div>
</div>

