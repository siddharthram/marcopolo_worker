
<div class="row">   
</div>
<div class="row">

	<h2>Hello. Would you like to  sign in ?</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<div class="row">
	<div class="span2"> </div>
	<div class="span2"> <%= f.email_field :email, :autofocus => true, placeholder: "email address" %></div>
	<div class="span4"> </div>
	<div class ="span4"> 
		<%- if devise_mapping.omniauthable? %>
	    <%- resource_class.omniauth_providers.each do |provider| %>
		<%= link_to image_tag("facebook-login.png"),omniauth_authorize_path(resource_name, provider) %><br />
		<% end -%>
	<% end -%>
	</div>
</div>



<div class="row">
	<div class="span2"></div>
	<div class="span2"><%= f.password_field :password, placeholder: "password" %></div>
	<div class="span8"></div>
</div>


<% if devise_mapping.rememberable? -%>
<div class="row">
	<div class="span2"> </div>
	<div class="span1"><%= f.check_box :remember_me %></div>
	<div class="span2"> <%= f.label :remember_me %></div>
	<div class="span7"></div>
</div>
<% end -%>

<div class="row">
	<div class="span2"> </div>
	<button type="submit" class="span2 btn btn-primary">
		<%= link_to raw('<i class="icon-user icon-white"></i>')%> Sign in
	</button>
	<div class="span10"> </div>
</div>
<% end %>


<%= render "devise/shared/links" %>
