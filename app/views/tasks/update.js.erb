var opt = "<%= escape_javascript(@options.to_s)%>";

<% if (@current_user == nil ) %>
var turk = "<%=escape_javascript(@mturk.to_s)%>";
var id = "<%=escape_javascript(@id)%>";
var ass = "<%=escape_javascript(@assignment)%>";
var out = "<%=escape_javascript(@output)%>";

var formtag = "edit_task_" + id;
var mydata = { "assignmentId": ass, "output": out};
var myform = $(formtag).serialize();
var myloc = "http://ximly.herokuapp.com/tasks" + "/" + id;

alert ("in JS");

var req = $.ajax({
  			url: myloc,
  			type: "put",
  			data: mydata
  		});
  
 req.done(function(response, ts, jqXHR) {
    	 $(formtag).attr("action","http://workersandbox.mturk.com/mturk/externalSubmit");
    	 $(formtag).submit(); 
  });
  req.fail(function(response, ts, error){
   alert("failed" +ts + error);
});

<% else %>
window.location.replace("/");
<% end %>


